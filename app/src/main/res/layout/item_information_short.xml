<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/bg_radius_24"
        android:elevation="@dimen/_3sdp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_infor_short"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:contentDescription="@string/information_0"
            android:scaleType="center"
            android:src="@drawable/information_1"
            app:riv_corner_radius="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_title_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/bakbak_one_400"
            android:includeFontPadding="false"
            android:text="@string/information_0"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/tv_content_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_display_400"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/content_infor_0"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>