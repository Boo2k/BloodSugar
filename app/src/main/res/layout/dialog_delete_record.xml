<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:background="@drawable/bg_radius_16"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_display_600"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/delete_"
            android:textColor="#AA0000"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginVertical="@dimen/_16sdp"
            android:text="@string/are_you_sure_you_want_to_delete_this_record"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_400"
            android:textSize="@dimen/_11ssp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_radius_24"
                android:backgroundTint="#F1F1F1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_pro_display_600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/cancel"
                    android:textColor="#454545"
                    android:textSize="@dimen/_11ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_radius_24"
                android:backgroundTint="#AA0000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_pro_display_600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>